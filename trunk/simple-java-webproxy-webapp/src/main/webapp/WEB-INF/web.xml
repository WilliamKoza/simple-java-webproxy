<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" version="2.4" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <servlet>
    <servlet-name>Noodle</servlet-name>
    <servlet-class>org.tigris.noodle.servlets.Noodle</servlet-class>
    <init-param>
      <param-name>properties</param-name>
      <param-value>/WEB-INF/NoodleResources.properties</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>Noodle</servlet-name>
    <url-pattern>/Noodle</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>NoodleTest</servlet-name>
    <servlet-class>org.tigris.noodle.servlets.NoodleTest</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>NoodleTest</servlet-name>
    <url-pattern>/NoodleTest</url-pattern>
  </servlet-mapping>

</web-app>
